        <script><![CDATA[(function() {
  /* populate the 'data' object */
  /* e.g., data.table = $sp.getValue('table'); */
	
	const requestSysId = $sp.getParameter('sys_id');
  const TARGET_CAT_ITEM_SYS_ID = '1bdc73288382e610fa7e7230feaad361'; // 替换为目标Catalog Item的SysID

  data.showButton = false;
	
  if (requestSysId) {
    const gr = new GlideRecord('sc_req_item');
		gr.addQuery('request', requestSysId);
		gr.query();
		while(gr.next()){
			if (gr.cat_item == TARGET_CAT_ITEM_SYS_ID) {
				data.showButton = true; // 满足条件时激活按钮
				data.item_sysid = gr.sys_id + "";
			}
		}
  }
})();]]></script>
